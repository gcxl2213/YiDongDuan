<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <Button
            android:id="@+id/register_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/back_to_port"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="start">
        </TextView>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="*请输入手机号/邮箱"
                android:inputType="textPersonName"
                android:paddingBottom="2dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:theme="@style/TextLabel_Primary">

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="*验证码"
                android:inputType="number"
                android:paddingBottom="2dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="20sp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:id="@+id/send_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:background="@drawable/bt_shape" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel_Primary">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="*请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="2dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel_Primary">

            <EditText
                android:id="@+id/et_repeatpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="*请确认密码"
                android:inputType="textPassword"
                android:paddingBottom="2dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel_Primary">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="*姓名"
                android:inputType="textPersonName"
                android:paddingBottom="2dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel_Primary">

            <EditText
                android:id="@+id/et_user_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="*学号/工号"
                android:inputType="text"
                android:paddingBottom="2dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_stu"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel_Primary"
            >

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/act_user_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="*学校"
                android:inputType="text"
                android:paddingBottom="2dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_teacher"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel_Primary"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/act_user_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="*学院"
                android:inputType="text"
                android:paddingBottom="2dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/bt_go"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bt_shape"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:text="确认"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/register_cancle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bt_shape_2"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:text="取消"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>